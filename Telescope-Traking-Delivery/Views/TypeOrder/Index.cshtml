@model List<Telescope_Traking_Delivery.Models.TypeOrder>

@{
    ViewData["Title"] = "Tipo de Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-style mb-30">
            <h5 class="mb-10">Tabla de Tipo de envios.</h5>
            <p class="text-sm mb-20">
                Registro de los Tipos de envios nbio.
            </p>



            <ul class="buttons-group">
                <li>

                    <a class="main-btn primary-btn-outline rounded-full btn-hover" asp-action="TypeOrder_Detalle" asp-controller="TypeOrder" asp-route-IdTypeOrders="0">Crear Nuevo</a>

                </li>
                @if (User.IsInRole("1"))
                {
                    <li>

                        <a class="main-btn success-btn-outline rounded-full btn-hover" asp-action="MostrarDatos" asp-controller="TypeOrder">Cargar Excel</a>

                    </li>
                }
            </ul>

            <div class="row">


                <div class="table-wrapper table-responsive">
                    <table class="table striped-table">
                        <thead>
                            <tr class="text-center">
                                <th>Id                          </th>
                                <th>Clasificacion               </th>
                                <th>Descripcion                 </th>
                                <th>Local / Foraneo             </th>
                                <th>Normal / Entregar Rapida    </th>
                                <th>Promocional                 </th>
                                <th>Estado                      </th>
                                <th>Fecha de Registro           </th>
                                <th>Actualizar                  </th>
                                <th>Eliminar                    </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td><p>@item.IdTypeOrders      </p></td>
                                    <td><p>@item.Clasification     </p></td>
                                    <td><p>@item.DescriptionOrder  </p></td>
                                    <td><p>@item.LocalForaneo      </p></td>
                                    <td><p>@item.NormalOrFast      </p></td>
                                    <td><p>@item.Promotion         </p></td>
                                    <td>
                                        <p>
                                            <script>
                                                var activo = "";

                                                activo = "@item.EsActivo";

                                                if (activo == "True") {
                                                    document.write('<span class="status-btn active-btn">Activo</span>');
                                                }
                                                else {
                                                    document.write('<span class="status-btn deactive-btn">No Activo</span>');
                                                }
                                            </script>
                                        </p>
                                    </td>
                                    <td>@item.FechaRegistro</td>
                                    <td>
                                        <div class="action">
                                            <a class="text-primari mx-auto" asp-action="TypeOrder_Detalle" asp-controller="TypeOrder" asp-route-IdTypeOrder="@item.IdTypeOrders"><i class="lni lni-pencil"></i></a>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="action">
                                            <a class="text-danger mx-auto" asp-action="Eliminar" asp-controller="TypeOrder" asp-route-IdTypeOrder="@item.IdTypeOrders"> <i class="lni lni-trash-can"></i> </a>

                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- end table -->
                </div>
            </div>
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>
<!-- end row -->
@section Scripts{

}