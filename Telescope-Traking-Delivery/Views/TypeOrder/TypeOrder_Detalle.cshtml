@model Telescope_Traking_Delivery.Models.TypeOrder
@{
    ViewData["Title"] = "TypeOrder_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-elements-wrapper fa-align-center">

    <div class="row">

        <div class="col-lg-6">

            <!-- input style start -->
            <div class="card-style mb-30">

                @if (Model.IdTypeOrders == 0)
                {
                    <h6 class="input-style-25">Crear Una nuevo Tipo de Pedido </h6>
                }
                else
                {
                    <h6 class="input-style-25"> Editar el Tipo de Pedido</h6>
                }




                <form asp-action="TypeOrder_Detalle" asp-controller="TypeOrder" method="post">
                    <input type="hidden" asp-for="IdTypeOrders" />

                    <div class="input-style-2">
                        <label class="form-label" asp-for="Clasification">Clasificacion</label>
                        <input class="form-control form-control-sm" asp-for=" Clasification" type="text" required />
                    </div>
                    <div class="input-style-2">
                        <label class="form-label" asp-for=" DescriptionOrder">Descripcion</label>
                        <input class="form-control form-control-sm" asp-for=" DescriptionOrder" type="text" required />
                    </div>
                    <div class="input-style-2">
                        <label class="form-label" asp-for=" LocalForaneo">Local / Foraneo</label>
                        <input class="form-control form-control-sm" asp-for=" LocalForaneo" type="text" />
                    </div>
                    <div class="input-style-2">
                        <label class="form-label" asp-for=" NormalOrFast">Normal / Entregar Rapida</label>
                        <input class="form-control form-control-sm" asp-for=" NormalOrFast" type="text" />
                    </div>

                    <div class="input-style-2">
                        <label class="form-label" asp-for=" Promotion">Promocional</label>
                        <input class="form-control form-control-sm" asp-for="Promotion" type="text" />
                    </div>

                    <div class="input-style-2">
                        <label class="form-label" asp-for="EsActivo">Estado</label>
                        <select class="form-select form-select-sm" asp-for="EsActivo">
                            <option value="True">Activo</option>
                            <option value="False">No Activo</option>
                        </select>
                    </div>
                    <div class="input-style-2" hidden>
                        <label class="form-label" asp-for="FechaRegistro">Fecha y Hora/Punto de Carga</label>
                        <input class="form-control form-control-sm" asp-for="FechaRegistro" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
                    </div>


                    <div class="input-style-2">

                        @if (Model.IdTypeOrders == 0)
                        {

                            <button class="btn btn-primary btn-sm w-40" type="submit">Crear</button>

                        }
                        else
                        {



                            <button class="btn btn-primary btn-sm w-40" type="submit">Actualizar</button>

                        }


                        <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="TypeOrder">Volver</a>

                    </div>



                </form>


            </div>

        </div>

    </div>

</div>

@section Scripts{

}