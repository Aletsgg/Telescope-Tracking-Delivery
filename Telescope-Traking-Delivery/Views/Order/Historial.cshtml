@model List<Telescope_Traking_Delivery.Models.Order>

@{
    ViewData["Title"] = "Historial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <link rel="stylesheet" media="print" />
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    @*ESTILOS DE BOTONES*@
    <link href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css" rel="stylesheet" />
    @*filter columns*@
    <link href="https://cdn.datatables.net/fixedheader/3.2.2/css/fixedHeader.dataTables.min.css" rel="stylesheet" />




    <!-- Custom fonts for this template-->
    <link href="~/modal/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/modal/css/sb-admin-2.css" rel="stylesheet">

    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->

    <link href="~/modal/vendor/jquery-ui/jquery-ui.css" rel="stylesheet">

}

<!-- Begin Page Content -->
<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Historial de Venta</h6>
        </div>
        <div class="card-body">
            <div class="form-row align-items-end">
                <div class="form-group col-sm-3">
                    <label for="cboBuscarPor">Buscar por</label>
                    <select class="form-control form-control-sm" id="cboBuscarPor">
                        <option value="fecha">Fechas</option>
                        <option value="numero">Numero Venta</option>
                    </select>
                </div>
                <div class="form-group col-sm-3 busqueda-fecha">
                    <label for="txtFechaInicio">Fecha Inicio</label>
                    <input type="text" class="form-control form-control-sm" id="txtFechaInicio">
                </div>
                <div class="form-group col-sm-3 busqueda-fecha">
                    <label for="txtFechaFin">Fecha Fin</label>
                    <input type="text" class="form-control form-control-sm" id="txtFechaFin">
                </div>
                <div class="form-group col-sm-3 busqueda-venta">
                    <label for="txtNumeroVenta">Numero Venta</label>
                    <input type="text" class="form-control form-control-sm" id="txtNumeroVenta">
                </div>

                <div class="col-12">
                    <a class="main-btn primary-btn-outline rounded-full btn-hover" asp-action="index" asp-controller="Order"> Ver tabla completa de Registros </a>
                </div>
                

            </div>


            <hr />
            <div class="row">
                <div class="col-sm-12  table-wrapper table-responsive">
                    <table class="table table-sm table-striped " id="tbventa">
                        <thead>
                            <tr>
                                <th></th>
                                <th><h5> ID</h5></th>
                                <th><h5> SITE(Carga)</h5></th>
                                <th><h5> ENTREGA / VALE</h5></th>                                
                                <th><h5> CLIENTE</h5></th>
                                <th><h5> DESTINO</h5></th>                                
                                <th><h5> ESTATUS</h5></th>
                                <th><h5> OBSERVACIONES EN LA ENTREGA</h5></th>                             
                                
                            </tr>
                        </thead>
                        <tbody>
                              @foreach (var item in Model)
                            {
                            <tr>
                                    <td>
                                        <div class="action">
                                            <a class="btn btn-info btn-sm" asp-action="modal" asp-controller="Order" asp-route-IdOrders="@item.IdOrders"> <i class="fas fa-eye"></i></a>
                                        </div>
                                        @* <button class="btn btn-info btn-sm" data-toggle="modal" data-target="#modalData"><i class="fas fa-eye"></i> Ver Detalle</button> *@
                                        @* <a class="text-danger mx-auto" data-toggle="modal" data-target="#modalData" asp-controller="Order" asp-route-IdOrders="@item.IdOrders"> <i class="fas fa-eye"></i></a> *@

                                    </td>
                                <td><p>@item.IdOrders</p></td>
                                <td><p>@item.SiteLoading</p></td>
                                <td><p>@item.OrdersDelivery</p></td>
                                <td><p>@item.IdClientNavigation.ClientName </p></td>
                                <td><p>@item.Destination </p></td>
                                <td><p>@item.DeliveryStatus</p></td>
                                <td><p>@item.Obsevations</p></td>
                                
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>


</div>


<!-- /.container-fluid -->
@section Scripts{

    <!-- Bootstrap core JavaScript-->
    <script src="~/modal/vendor/jquery/jquery.min.js"></script>
    <script src="~/modal/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/modal/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/modal/js/sb-admin-2.js"></script>

    <!-- ============================================================
    =SCRIPTS PARA ESTA PAGINA
    ===============================================================-->

    <script src="~/modal/vendor/jquery-ui/idioma/datepicker-es.js"></script>
    <script src="~/modal/vendor/jquery-ui/jquery-ui.js"></script>

}