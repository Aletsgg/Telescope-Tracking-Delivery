@model Telescope_Traking_Delivery.Models.Usuario
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/assets/images/favicon.svg" type="image/x-icon" />

    <title>Login</title>


    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/lineicons.css" />
    <link rel="stylesheet" href="~/assets/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="~/assets/css/fullcalendar.css" />
    <link rel="stylesheet" href="~/assets/css/main.css" />
</head>

<body>

    <!-- ========== signin-section start ========== -->
    <section class="signin-section">
        <div class="container-fluid">

            <!-- ========== title-wrapper end ========== -->

            <div class="row g-0 auth-row">
                <div class="col-lg-6">
                    <div class="auth-cover-wrapper bg-primary-100">
                        <div class="auth-cover">
                            <div class="title text-center">
                                <h1 class="text-primary mb-10">Welcome Back</h1>
                                <p class="text-medium">
                                    Sign in to your Existing account to continue
                                </p>
                            </div>
                            <div class="cover-image">
                                <img src="~/img/Logo.png" alt="" />
                            </div>

                        </div>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-lg-6">
                    <div class="signin-wrapper">
                        <div class="form-wrapper">
                            <h6 class="mb-15">Sign In Form</h6>
                            <p class="text-sm input-style-15">
                                Start creating the best user experience...
                            </p>





                            <form class="login-form" asp-action="Register" asp-controller="Register" method="post">
                                <input type="hidden" asp-for="IdUsuario" />

                                <div class="input-style-1">
                                    <label class="form-label" asp-for="Nombre" hidden></label>
                                    <input type="text" class="login-username" autofocus="true" required="true"
                                           placeholder="Nombre Completo" asp-for="Nombre" />
                                </div>
                                <div class="input-style-1">
                                    <label class="form-label" asp-for="Correo" hidden></label>
                                    <input type="email" class="login-username" autofocus="true" required="true"
                                           placeholder="Correo" asp-for="Correo" />
                                </div>
                                <div class="input-style-1">
                                    <label class="form-label" asp-for="Telefono" hidden></label>
                                    <input type="tel" class="login-username" autofocus="true" required="true"
                                           placeholder="Numero de Telefono" asp-for="Telefono" />
                                </div>
                                <div class="input-style-1" hidden>
                                    <label class="form-label" asp-for="IdRol" hidden>IdRol</label>
                                    <input type="text" required="true" asp-for="IdRol" value="4" hidden />
                                </div>

                                <div class="input-style-1">
                                    <label class="form-label" asp-for="Clave" hidden></label>
                                    <input type="password" class="login-password" required="true"
                                           placeholder="Contraseña" asp-for="Clave" />
                                </div>
                                <div class="input-style-1" hidden>
                                    <label class="form-label" asp-for="EsActivo" hidden>EsActivo</label>
                                    <input type="text" required="true" asp-for="EsActivo" value="True" hidden />
                                </div>


                                <input type="submit" name="Register" value="Register" class="main-btn primary-btn btn-hover w-100 text-center" />
                            </form>





                            <div class="singin-option pt-40">
                                <p class="text-sm text-medium text-center text-gray">
                                    Easy Sign In With
                                </p>

                                <p class="text-sm text-medium text-dark text-center">
                                    ¿Ya tienes una cuenta?
                                    <a href="@Url.Action("Login","Acceso")">Iniciar sesion.</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </section>
    <!-- ========== signin-section end ========== -->
    <!-- ========== footer start =========== -->
    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 order-last order-md-first">
                    <div class="copyright text-center text-md-start">
                        <p class="text-sm">

                            <a href="https://envialomexico.com/" rel="nofollow" target="_blank">
                                ENVÍALO MÉXICO SA DE CV
                            </a>
                        </p>
                    </div>
                </div>
                <!-- end col-->
                <div class="col-md-6">
                    <div class="terms d-flex justify-content-center justify-content-md-end">
                        <a href="#0" class="text-sm">Term & Conditions</a>
                        <a href="#0" class="text-sm ml-15">Privacy & Policy</a>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </footer>
    <!-- ========== footer end =========== -->
    <!-- ========= All Javascript files linkup ======== -->
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/Chart.min.js"></script>
    <script src="~/assets/js/dynamic-pie-chart.js"></script>
    <script src="~/assets/js/moment.min.js"></script>
    <script src="~/assets/js/fullcalendar.js"></script>
    <script src="~/assets/js/jvectormap.min.js"></script>
    <script src="~/assets/js/world-merc.js"></script>
    <script src="~/assets/js/polyfill.js"></script>

</body>

</html>