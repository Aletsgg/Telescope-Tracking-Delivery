@model Telescope_Traking_Delivery.Models.Transport
@{
    ViewData["Title"] = "Transport_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-elements-wrapper fa-align-center">

    <div class="row">

        <div class="col-lg-6">

            <!-- input style start -->
            <div class="card-style mb-30">

                @if (Model.IdTransport == 0)
                {
                    <h6 class="input-style-25">Crear un nuevo registro de Transporte</h6>
                }
                else
                {
                    <h6 class="input-style-25"> Editar registro de Transporte</h6>
                }


                <form asp-action="Transport_Detalle" asp-controller="Transport" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="IdTransport" />

                    <div class="input-style-2">
                        <label class="form-label" asp-for=" TransportName">Nombre de transporte</label>
                        <input class="form-control form-control-sm" asp-for=" TransportName" type="text" required />
                    </div>
                    <div class="input-style-2">
                        <label class="form-label" asp-for=" UnitType">Tipo de Unidad</label>
                        <input class="form-control form-control-sm" asp-for=" UnitType" type="text" requiered />
                    </div>
                    <div class="input-style-2">
                        <label class="form-label" asp-for=" Plate">Placa</label>
                        <input class="form-control form-control-sm" asp-for=" Plate" type="text" required />
                    </div>
                    <div class="input-style-2">
                        <label class="form-label" asp-for=" Capacity">Capacidad</label>
                        <input class="form-control form-control-sm" asp-for=" Capacity" type="text" required />
                    </div>

                    <div class="input-style-2">
                        <label class="form-label" asp-for=" Details">Detalles</label>
                        <input class="form-control form-control-sm" asp-for="Details" type="text" />
                    </div>
                    <div class="input-style-2">
                        <label class="form-label" asp-for="Refrigerated">Refrigerado</label> <br />
                        <select class="form-select form-select-sm" asp-for="Refrigerated" required>
                            <option value="True">Si</option>
                            <option value="False">No</option>
                        </select>
                    </div>
                    <div class="input-style-2">
                        <label class="form-label" asp-for="EsActivo">Estado</label> <br />
                        <select class="form-select form-select-sm" asp-for="EsActivo">
                            <option value="True">Activo</option>
                            <option value="False">No Activo</option>
                        </select>
                    </div>
                    <div class="input-style-2">
                        <label class="form-label" asp-for="UrlImagen">Imagen</label>
                        <input class="form-control form-control-sm" asp-for="UrlImagen" type="file" name="Imagen" />
                    </div>
                    <div class="input-style-2" hidden>
                        <label class="form-label" asp-for="FechaRegistro">Fecha y Hora/Punto de Carga</label>
                        <input class="form-control form-control-sm" asp-for="FechaRegistro" type="datetime-local" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
                    </div>

                    <div class="input-style-2">

                        @if (Model.IdTransport == 0)
                        {
                            <button class="btn btn-primary btn-sm w-40" type="submit">Crear</button>
                        }
                        else
                        {
                            <button class="btn btn-primary btn-sm w-40" type="submit">Actualizar</button>

                        }
                        <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Transport">Volver</a>

                    </div>



                </form>



            </div>

        </div>

    </div>

</div>

@section Scripts{
}
