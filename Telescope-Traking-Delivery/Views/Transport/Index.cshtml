@model List<Telescope_Traking_Delivery.Models.Transport>

@{
    ViewData["Title"] = "Transportes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-style mb-30">
            <h5 class="mb-10">Tabla de Transportes.</h5>
            <p class="text-sm mb-20">
                Registro de los Transportes de nbio.
            </p>



            <ul class="buttons-group">
                <li>
                    <a class="main-btn primary-btn-outline rounded-full btn-hover" asp-action="Transport_Detalle" asp-controller="Transport"
                       asp-route-IdTransport="0">Crear Nuevo</a>
                </li>
                @if (User.IsInRole("1"))
                {
                    <li>
                        <a class="main-btn success-btn-outline rounded-full btn-hover" asp-action="MostrarDatos" asp-controller="Transport">Cargar Excel</a>
                    </li>
                }
            </ul>

            <div class="row">


                <div class="table-wrapper table-responsive">
                    <table class="table striped-table">

                        <thead>
                            <tr class="text-center">
                                <th>Id</th>
                                <th>Nombre de transporte</th>
                                <th>Tipo de Unidad</th>
                                <th>Placa</th>
                                <th>Capacidad</th>
                                <th>Detalles</th>
                                <th>Refrigerado</th>
                                <th>Estado</th>
                                <th>Fecha de Registro</th>
                                <th>Url Imagen</th>
                                <th>Actualizar </th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td><p>@item.IdTransport </p></td>
                                    <td><p>@item.TransportName </p></td>
                                    <td><p>@item.UnitType </p></td>
                                    <td><p>@item.Plate </p></td>
                                    <td><p>@item.Capacity </p></td>
                                    <td><p>@item.Details</p></td>
                                    <td>
                                        <script>
                                            var activo = "";

                                            activo = "@item.Refrigerated";

                                            if (activo == "True") {
                                                document.write('<span class="status-btn active-btn">Es refrigerado</span>');
                                            }
                                            else {
                                                document.write('<span class="status-btn deactive-btn">No es refrigerado</span>');
                                            }
                                        </script>

                                    </td>
                                    <td>
                                        <p>
                                            <script>
                                                var activo = "";

                                                activo = "@item.EsActivo";

                                                if (activo == "True") {
                                                    document.write('<span class="status-btn active-btn">Activo</span>');
                                                }
                                                else {
                                                    document.write('<span class="status-btn deactive-btn">No Activo</span>');
                                                }
                                            </script>
                                        </p>
                                    </td>
                                    <td>@item.FechaRegistro</td>
                                    <td>
                                        <p>
                                            <img id="imgProducto" style="max-width:100px;" src="@item.UrlImagen" class="rounded mx-auto d-block" alt="...">
                                        </p>
                                    </td>
                                    <td>
                                        <div class="action">

                                            <a class="text-primari mx-auto" asp-action="Transport_Detalle" asp-controller="Transport" asp-route-IdTransport="@item.IdTransport"><i class="lni lni-pencil"></i></a>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="action">

                                            <a class="text-danger mx-auto" asp-action="Eliminar" asp-controller="Transport" asp-route-IdTransport="@item.IdTransport"> <i class="lni lni-trash-can"></i></a>
                                        </div>
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- end table -->
                </div>
            </div>
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>
<!-- end row -->
@section Scripts{



}