@model List<Telescope_Traking_Delivery.Models.Transportist>

@{
    ViewData["Title"] = "Transportistas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card-style mb-30">
            <h5 class="mb-10">Tabla de Transportistas.</h5>
            <p class="text-sm mb-20">
                Registro de los Transportistas de nbio.
            </p>



            <ul class="buttons-group">
                <li>

                    <a class="main-btn primary-btn-outline rounded-full btn-hover" asp-action="Transportist_Detalle" asp-controller="Transportist" asp-route-IdTransportist="0">Crear Nuevo</a>

                </li>
                @if (User.IsInRole("1"))
                {
                    <li>
                        <a class="main-btn success-btn-outline rounded-full btn-hover" asp-action="MostrarDatos" asp-controller="Transportist">Cargar Excel</a>

                    </li>
                }
            </ul>

            <div class="row">


                <div class="table-wrapper table-responsive">
                    <table class="table striped-table">

                        <thead>
                            <tr class="text-center">
                                <th>Id              </th>
                                <th>Nombre          </th>
                                <th>Edad            </th>
                                <th>Licencia        </th>
                                <th>Tipo de Licencia</th>
                                <th>Telefono        </th>
                                <th>Estado          </th>
                                <th>Fecha de Registro</th>
                                <th>Url Imagen      </th>
                                <th>Actualizar      </th>
                                <th>Eliminar        </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td> <p> @item.IdTransportist </p></td>
                                    <td> <p> @item.NameTransportist </p></td>
                                    <td> <p> @item.Age </p></td>
                                    <td> <p> @item.License </p></td>
                                    <td> <p> @item.TypeLicense </p></td>
                                    <td> <p> @item.Phone </p></td>
                                    <td><span class="status-btn active-btn">@item.EsActivo</span></td>
                                    <td>@item.FechaRegistro</td>
                                    <td>
                                        <p>
                                            <img id="imgProducto" style="max-width:100px;" src="@item.UrlFoto" class="rounded mx-auto d-block" alt="...">
                                        </p>
                                    </td>

                                    <td>
                                        <div class="action">
                                            <a class="text-primari mx-auto" asp-action="Transportist_Detalle" asp-controller="Transportist" asp-route-IdTransportist="@item.IdTransportist"><i class="lni lni-pencil"></i></a>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="action">
                                            <a class="text-danger mx-auto" asp-action="Eliminar" asp-controller="Transportist" asp-route-IdTransportist="@item.IdTransportist"><i class="lni lni-trash-can"></i></a>
                                        </div>
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- end table -->
                </div>
            </div>
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>
<!-- end row -->
@section Scripts{


}